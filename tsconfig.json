{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node", "jest"],
    "importHelpers": true,
    "outDir": "dist/",
    "sourceMap": true,
    "rootDir": "./src",
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "pretty": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["test"]
}
